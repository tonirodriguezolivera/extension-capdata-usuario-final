{
  "manifest_version": 3,
  "name": "Capturador de Reservas CapData", 
  "version": "4.2", 
  "description": "Extensión para capturar datos de reservas de vuelo desde la página actual y enviarlos a la API de CapData.",
  "permissions": [
    "storage",      
    "scripting",    
    "activeTab",    
    "notifications",
    "windows"
  ],
  "host_permissions": [
    "https://capdata.es/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png", 
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" 
  }
}